<div class="column is-one-quarter">
	<nav class="panel">
		<p class="panel-heading">Profile</p>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<%= gravatar_image_tag(user.email, size: 64, alt: user.name) %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							<strong><%= user.name %></strong><br />
							<small><%= user.username %></small>
						</p>
					</div>
				</div>
				<div class="media-right">
					<div class="content">
						<% if current_user.id != user.id %>
							<% if !current_user.following?(user) %>
								<nav class="level">
									<div class="level-left is mobile">
										<%= form_tag follow_user_path(user), action: 'follow' do |f| %>
											<span><%= submit_tag "Follow", class: "button is-link is-rounded" %></span>
										<% end %>
									</div>
								</nav>
							<% else %>
								<nav class="level">
									<div class="level-left is mobile">
										<%= form_tag unfollow_user_path(user), action: 'unfollow' do |f| %>
											<%= submit_tag "Unfollow", class: "button is-danger is-rounded" %>
										<% end %>
									</div>
								</nav>
							<% end %>
						<% end %>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Tweeets</p>
						<p class="title is-6"><%= user.tweeets.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Following</p>
						<p class="title is-6"><%= user.following.count %></p>
					</div>
				</div>
					<div class="level-item has-centered-text">
					<div>
						<p class="heading">Followers</p>
						<p class="title is-6"><%= user.followers.count %></p>
					</div>
				</div>
			</div>
		</div>
	</nav>
</div>
